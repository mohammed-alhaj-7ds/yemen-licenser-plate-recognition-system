# =============================================
# Yemen LPR - Environment Variables
# =============================================
# Copy to .env and customize

# Django
DEBUG=False
SECRET_KEY=change-this-to-a-long-random-string
ALLOWED_HOSTS=*
DJANGO_SETTINGS_MODULE=core.settings.production

# AI Models (relative to project root or absolute)
# These files must exist for AI features to work
YOLO_SEG_MODEL_PATH=ai/models/vehicle_seg.pt
YOLO_DETECT_MODEL_PATH=ai/models/plate_detect.pt

# Force CPU mode (required for Railway)
FORCE_CPU=True

# API Settings
API_RATE_LIMIT_PER_MINUTE=60
VIDEO_PROCESS_TIMEOUT_SECONDS=600
