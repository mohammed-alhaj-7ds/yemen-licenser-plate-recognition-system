# Environment Variables
# Copy this file to .env and adjust values

# ===== Django Settings =====
DEBUG=False
SECRET_KEY=change-me-in-production
ALLOWED_HOSTS=*

# ===== Database (SQLite by default) =====
# DB_PATH=db.sqlite3

# ===== AI Configuration =====
# Force CPU mode (set to True for PaaS without GPU)
FORCE_CPU=True

# Model paths relative to project root
YOLO_SEG_MODEL_PATH=ai/models/vehicle_seg.pt
YOLO_DETECT_MODEL_PATH=ai/models/plate_detect.pt

# ===== API Configuration =====
API_RATE_LIMIT_PER_MINUTE=60
VIDEO_PROCESS_TIMEOUT_SECONDS=600

# ===== CORS (Frontend URL for production) =====
# CORS_ALLOWED_ORIGINS=https://your-domain.railway.app

# ===== Docker/PostgreSQL (if using Docker) =====
# POSTGRES_DB=yemen_lpr
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_HOST=db
# POSTGRES_PORT=5432
