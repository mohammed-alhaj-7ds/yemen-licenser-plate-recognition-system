# ========================================
# Yemen LPR - Environment Variables
# ========================================
# Copy to .env and update values

# ===== Django Settings =====
DEBUG=False
SECRET_KEY=change-this-to-a-secure-random-string
ALLOWED_HOSTS=*
DJANGO_SETTINGS_MODULE=core.settings.production

# ===== AI Configuration =====
# CPU mode (required for Railway and most PaaS)
FORCE_CPU=True

# Model paths (relative to project root)
# Models are NOT in GitHub - download or use Volume
YOLO_SEG_MODEL_PATH=ai/models/vehicle_seg.pt
YOLO_DETECT_MODEL_PATH=ai/models/plate_detect.pt

# ===== API Settings =====
API_RATE_LIMIT_PER_MINUTE=60
VIDEO_PROCESS_TIMEOUT_SECONDS=600

# ===== Frontend (for CORS) =====
# Set to your frontend URL in production
# CORS_ALLOWED_ORIGINS=https://your-frontend.railway.app

# ===== Database (SQLite default) =====
# DB_PATH=/app/backend/db.sqlite3
